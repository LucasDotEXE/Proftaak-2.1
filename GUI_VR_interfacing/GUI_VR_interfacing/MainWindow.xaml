<Window x:Class="GUI_VR_interfacing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_VR_interfacing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="SessionComboBox" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Width="260" SelectionChanged="SelectSessionHandler"/>
        <Label x:Name="sessionLabel" Content="Session:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.087,0.309"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="195,84,0,0" Click="ConnectButton_Click"/>
        <DataGrid x:Name="DG_sessions" HorizontalAlignment="Left" Height="336" Margin="323,57,0,0" VerticalAlignment="Top" Width="446"/>
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" Margin="13,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="257" Text="Select your Session"/>
        <Button Content="Refresh" Margin="10,84,0,0" Click="Button_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75"/>
    </Grid>
</Window>
